{
  "root": true,
  "env": {
    "es2021": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "semi":  ["error", "never"],
    "max-len": ["error", {"code": 120}],
    "quotes": ["error", "single"]
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  }
}
